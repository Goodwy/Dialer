<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/call_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/caller_avatar"
        android:layout_width="@dimen/incoming_call_avatar_size"
        android:layout_height="@dimen/incoming_call_avatar_size"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="@dimen/vertical_bias_avatar"
        tools:src="@drawable/ic_person"/>

    <com.goodwy.commons.views.MyTextView
        android:id="@+id/callerNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:gravity="center_horizontal"
        android:textSize="@dimen/caller_name_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caller_avatar"
        tools:text="Caller name"/>

    <com.goodwy.commons.views.MyTextView
        android:id="@+id/caller_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:gravity="center_horizontal"
        android:textSize="@dimen/call_status_text_size"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/callerNameLabel"
        tools:text="Company (Job Position)"
        tools:visibility="visible"/>

    <com.goodwy.commons.views.MyTextView
        android:id="@+id/caller_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:gravity="center_horizontal"
        android:textSize="@dimen/call_status_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caller_description"
        tools:text="*0912 345 678"/>

    <RelativeLayout
        android:id="@+id/call_status_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caller_number">

        <ImageView
            android:id="@+id/call_sim_image"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:alpha="0.8"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_sim_vector"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/call_sim_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignTop="@+id/call_sim_image"
            android:layout_alignBottom="@+id/call_sim_image"
            android:layout_alignStart="@+id/call_sim_image"
            android:layout_alignEnd="@+id/call_sim_image"
            android:alpha="0.8"
            android:gravity="center"
            android:textColor="@color/md_grey_black"
            android:textSize="@dimen/bigger_text_size"
            android:visibility="gone"
            tools:text="1"
            tools:visibility="visible"/>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/call_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/call_sim_image"
            android:layout_marginStart="@dimen/small_margin"
            android:alpha="0.8"
            android:textSize="@dimen/call_status_text_size"
            tools:text="Is Calling"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/hold_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:alpha="0.8"
        android:text="@string/call_on_hold"
        android:textColor="@color/red_missed"
        android:textSize="@dimen/call_status_text_size"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/call_status_holder"
        tools:visibility="visible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/on_hold_status_holder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/md_grey_white"
        android:paddingStart="@dimen/normal_margin"
        android:paddingEnd="@dimen/normal_margin"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:contentDescription="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/on_hold_caller_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_phone_vector"/>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/on_hold_caller_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/call_status_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/on_hold_label"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="0912 345 678"/>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/on_hold_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            android:text="@string/call_on_hold"
            android:textSize="@dimen/call_status_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ongoing_call_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/callToggleMicrophone"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginEnd="@dimen/margin_button_horizontal"
            android:background="@drawable/pulsing_background"
            android:contentDescription="@string/turn_microphone_off"
            android:padding="@dimen/bigger_margin"
            android:src="@drawable/ic_microphone_vector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="@dimen/vertical_bias_button"/>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/call_toggle_microphone_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/mute"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="@+id/callToggleMicrophone"
            app:layout_constraintStart_toStartOf="@+id/callToggleMicrophone"
            app:layout_constraintTop_toBottomOf="@+id/callToggleMicrophone"/>

        <LinearLayout
            android:id="@+id/callDialpadHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/show_dialpad"
            android:foreground="@drawable/pulsing_background"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="@dimen/vertical_bias_button">

            <ImageView
                android:id="@+id/call_dialpad"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:paddingStart="@dimen/bigger_margin"
                android:paddingTop="22dp"
                android:paddingEnd="@dimen/bigger_margin"
                android:paddingBottom="18dp"
                android:src="@drawable/ic_dialpad_vector"/>
        </LinearLayout>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/call_dialpad_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/dialpad"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="@+id/callDialpadHolder"
            app:layout_constraintStart_toStartOf="@+id/callDialpadHolder"
            app:layout_constraintTop_toBottomOf="@+id/callDialpadHolder"/>

        <ImageView
            android:id="@+id/callToggleSpeaker"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginStart="@dimen/margin_button_horizontal"
            android:background="@drawable/pulsing_background"
            android:contentDescription="@string/turn_speaker_on"
            android:padding="@dimen/bigger_margin"
            android:src="@drawable/ic_volume_up_vector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="@dimen/vertical_bias_button"/>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/callToggleSpeakerLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/audio_route_speaker"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="@+id/callToggleSpeaker"
            app:layout_constraintStart_toStartOf="@+id/callToggleSpeaker"
            app:layout_constraintTop_toBottomOf="@+id/callToggleSpeaker"/>

        <LinearLayout
            android:id="@+id/callAddHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="@dimen/margin_button_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/call_add"
            android:foreground="@drawable/pulsing_background"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/callToggleSpeaker">

            <ImageView
                android:id="@+id/call_add"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:padding="@dimen/bigger_margin"
                android:src="@drawable/ic_add_call_vector"/>
        </LinearLayout>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/call_add_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/call_add"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="@+id/callAddHolder"
            app:layout_constraintStart_toStartOf="@+id/callAddHolder"
            app:layout_constraintTop_toBottomOf="@+id/callAddHolder"/>

        <LinearLayout
            android:id="@+id/call_swap_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="@dimen/margin_button_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/call_swap"
            android:foreground="@drawable/pulsing_background"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/callAddHolder">

            <ImageView
                android:id="@+id/call_swap"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:padding="@dimen/bigger_margin"
                android:src="@drawable/ic_call_swap_vector"/>
        </LinearLayout>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/call_swap_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/call_swap"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="@+id/call_swap_holder"
            app:layout_constraintStart_toStartOf="@+id/call_swap_holder"
            app:layout_constraintTop_toBottomOf="@+id/call_swap_holder"/>

        <LinearLayout
            android:id="@+id/call_merge_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/call_merge"
            android:foreground="@drawable/pulsing_background"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/call_toggle_hold">

            <ImageView
                android:id="@+id/call_merge"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:padding="@dimen/bigger_margin"
                android:src="@drawable/ic_call_merge_vector"/>
        </LinearLayout>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/call_merge_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/call_merge"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="@+id/call_merge_holder"
            app:layout_constraintStart_toStartOf="@+id/call_merge_holder"
            app:layout_constraintTop_toBottomOf="@+id/call_merge_holder"/>

        <ImageView
            android:id="@+id/call_toggle_hold"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/pulsing_background"
            android:contentDescription="@string/hold_call"
            android:padding="@dimen/big_margin"
            android:src="@drawable/ic_pause_vector"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/callToggleSpeaker"/>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/call_toggle_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/hold_call"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="@+id/call_toggle_hold"
            app:layout_constraintStart_toStartOf="@+id/call_toggle_hold"
            app:layout_constraintTop_toBottomOf="@+id/call_toggle_hold"/>

        <LinearLayout
            android:id="@+id/call_add_contact_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginStart="@dimen/margin_button_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/add_number_to_contact"
            android:foreground="@drawable/pulsing_background"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/callToggleSpeaker">

            <ImageView
                android:id="@+id/call_add_contact"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:padding="@dimen/larger_margin"
                android:src="@drawable/ic_person_rounded_outline"/>
        </LinearLayout>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/call_add_contact_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/add_number"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="@+id/call_add_contact_holder"
            app:layout_constraintStart_toStartOf="@+id/call_add_contact_holder"
            app:layout_constraintTop_toBottomOf="@+id/call_add_contact_holder"/>

        <ImageView
            android:id="@+id/call_manage"
            android:layout_width="@dimen/dialpad_button_size"
            android:layout_height="@dimen/dialpad_button_size"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="@dimen/margin_button_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/conference_manage"
            android:elevation="@dimen/medium_margin"
            android:padding="@dimen/medium_margin"
            android:src="@drawable/ic_people_vector"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="@dimen/vertical_bias_call_end"
            tools:visibility="visible"/>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/call_manage_label"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/conference"
            android:textSize="@dimen/normal_text_size"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/call_manage"
            app:layout_constraintStart_toStartOf="@+id/call_manage"
            app:layout_constraintTop_toBottomOf="@+id/call_manage"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/call_end"
            android:layout_width="@dimen/incoming_call_button_size"
            android:layout_height="@dimen/incoming_call_button_size"
            android:contentDescription="@string/end_call"
            android:src="@drawable/ic_call_end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="@dimen/vertical_bias_call_end"/>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/dialpadClose"
            android:layout_width="82dp"
            android:layout_height="@dimen/incoming_call_button_size"
            android:layout_marginStart="@dimen/margin_button_horizontal"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:ellipsize="marquee"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/hide"
            android:textSize="@dimen/bigger_text_size"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="@dimen/vertical_bias_call_end"
            tools:visibility="visible"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/controls_single_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="call_toggle_hold,callAddHolder"
            tools:visibility="visible"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/controls_two_calls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="call_swap_holder,call_merge_holder"/>

        <RelativeLayout
            android:id="@+id/dialpad_wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/big_margin"
            android:orientation="vertical"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/call_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="gone">

            <RelativeLayout
                android:id="@+id/dialpad_input_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/dialpad_include"
                android:gravity="center">

                <com.goodwy.commons.views.MyEditText
                    android:id="@+id/dialpad_input"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dialpad_button_size"
                    android:layout_marginEnd="@dimen/dialpad_button_size"
                    android:gravity="center"
                    android:inputType="phone"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/dialpad_text_size"/>
            </RelativeLayout>

            <include
                android:id="@+id/dialpad_include"
                layout="@layout/dialpad_call"/>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/incoming_call_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/call_remind"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="220dp"
            android:alpha="0.9"
            android:contentDescription="@string/send_sms"
            android:elevation="@dimen/medium_margin"
            android:src="@drawable/ic_alarm_filled_vector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.60"/>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/call_remind_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smaller_margin"
            android:elevation="@dimen/medium_margin"
            android:text="@string/remind_me"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintEnd_toEndOf="@+id/call_remind"
            app:layout_constraintStart_toStartOf="@+id/call_remind"
            app:layout_constraintTop_toBottomOf="@+id/call_remind"/>

        <ImageView
            android:id="@+id/call_message"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="220dp"
            android:alpha="0.9"
            android:contentDescription="@string/send_sms"
            android:elevation="@dimen/medium_margin"
            android:src="@drawable/ic_messages"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.60"/>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/call_message_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smaller_margin"
            android:elevation="@dimen/medium_margin"
            android:text="@string/message"
