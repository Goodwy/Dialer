        android:id="@+id/dialpad_7_holder"
        android:layout_width="@dimen/call_button_size"
        android:layout_height="@dimen/call_button_size"
        android:layout_marginEnd="@dimen/margin_button_horizontal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:foreground="@drawable/pulsing_background"
        android:contentDescription="@string/seven"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/dialpad_7"
            style="@style/DialpadNumberStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/medium_margin"
            android:text="7"/>

