            android:layout_marginTop="@dimen/medium_margin"
            android:text="5"/>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/dialpad_5_letters"
            style="@style/DialpadLetterStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialpad_5"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/medium_margin"
            android:gravity="center_horizontal"
            android:text="JKL"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialpad_6_holder"
        android:layout_width="@dimen/call_button_size"
        android:layout_height="@dimen/call_button_size"
        android:layout_marginStart="@dimen/margin_button_horizontal"
