            android:layout_marginBottom="@dimen/medium_margin"
            android:gravity="center_horizontal"
            android:text="WXYZ"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialpad_asterisk_holder"
        android:layout_width="@dimen/call_button_size"
        android:layout_height="@dimen/call_button_size"
        android:layout_marginEnd="@dimen/margin_button_horizontal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:foreground="@drawable/pulsing_background"
        android:contentDescription="@string/asterisk"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dialpad_asterisk"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_asterisk"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialpad_0_holder"
        android:layout_width="@dimen/call_button_size"
        android:layout_height="@dimen/call_button_size"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:foreground="@drawable/pulsing_background"
        android:contentDescription="@string/zero"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/dialpad_0"
            style="@style/DialpadNumberStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/medium_margin"
            android:text="0"/>

        <com.goodwy.commons.views.MyTextView
            android:id="@+id/dialpad_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialpad_0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-10dp"
            android:gravity="center"
            android:text="+"
            android:textSize="@dimen/actionbar_text_size"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialpad_hashtag_holder"
        android:layout_width="@dimen/call_button_size"
        android:layout_height="@dimen/call_button_size"
        android:layout_marginStart="@dimen/margin_button_horizontal"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:foreground="@drawable/pulsing_background"
        android:contentDescription="@string/hashtag"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

