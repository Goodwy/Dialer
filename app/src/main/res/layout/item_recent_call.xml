<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_recents_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/selector">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_recents_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:paddingStart="@dimen/activity_margin"
        android:paddingTop="@dimen/medium_margin"
        android:paddingEnd="@dimen/activity_margin">

        <ImageView
            android:id="@+id/item_recents_image"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"
            android:padding="@dimen/tiny_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_person" />

        <ImageView
            android:id="@+id/item_recents_image_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/ic_person"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="@+id/item_recents_image"
            app:layout_constraintRight_toRightOf="@+id/item_recents_image"
            app:layout_constraintTop_toTopOf="@+id/item_recents_image"
            app:layout_constraintBottom_toBottomOf="@+id/item_recents_image" />

        <TextView
            android:id="@+id/item_recents_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_margin"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/normal_text_size"
            app:layout_constraintLeft_toRightOf="@+id/item_recents_image"
            app:layout_constraintRight_toLeftOf="@+id/item_recents_date_time"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="John Doe" />

        <ImageView
            android:id="@+id/item_recents_sim_image"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:alpha="0.6"
            android:paddingTop="@dimen/tiny_margin"
            android:paddingBottom="@dimen/tiny_margin"
            android:src="@drawable/ic_sim_vector"
            app:layout_constraintBottom_toBottomOf="@+id/item_recents_type"
            app:layout_constraintLeft_toRightOf="@+id/item_recents_type"
            app:layout_constraintTop_toTopOf="@+id/item_recents_type" />
        <!--android:visibility="gone"-->

        <TextView
            android:id="@+id/item_recents_sim_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/md_grey_black"
            android:textSize="@dimen/small_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/item_recents_sim_image"
            app:layout_constraintLeft_toLeftOf="@+id/item_recents_sim_image"
            app:layout_constraintRight_toRightOf="@+id/item_recents_sim_image"
            app:layout_constraintTop_toTopOf="@+id/item_recents_sim_image"
            tools:text="1" />
        <!--android:visibility="gone"-->

        <ImageView
            android:id="@+id/item_recents_type"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginEnd="@dimen/tiny_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:alpha="0.6"
            android:src="@drawable/ic_incoming_call_vector"
            android:scaleType="fitStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/item_recents_name" />

        <TextView
            android:id="@+id/item_recents_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:paddingStart="@dimen/medium_margin"
            android:textSize="@dimen/smaller_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/item_recents_type"
            app:layout_constraintLeft_toRightOf="@+id/item_recents_sim_image"
            app:layout_constraintTop_toTopOf="@+id/item_recents_type"
            tools:text="00:10" />

        <TextView
            android:id="@+id/item_recents_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:paddingStart="@dimen/medium_margin"
            android:textSize="@dimen/smaller_text_size"
            app:layout_constraintBottom_toBottomOf="@+id/item_recents_type"
            app:layout_constraintLeft_toRightOf="@+id/item_recents_duration"
            app:layout_constraintTop_toTopOf="@+id/item_recents_type"
            tools:text="+12345678901" />

        <TextView
            android:id="@+id/item_recents_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:gravity="center|end"
            android:maxLines="1"
            android:paddingEnd="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/medium_margin"
            android:textSize="@dimen/smaller_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/item_recents_info"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="31.12" />

        <ImageView
            android:id="@+id/item_recents_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="@dimen/medium_margin"
            android:src="@drawable/ic_info"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/item_recents_info_holder"
            android:layout_width="76dp"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginTop="-8dp"
            android:layout_marginEnd="-16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1px"
            android:background="@drawable/divider_settings"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/item_recents_name"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/overflow_menu_icon"
            style="@style/OverflowMenuIconStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/overflow_menu_anchor"
            style="@style/OverflowMenuAnchorStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
