<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/medium_margin">

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/choose_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="all_calls,missed_calls,incoming_calls,outgoing_calls,rejected_calls"
        app:flow_horizontalGap="@dimen/smaller_margin"
        app:flow_wrapMode="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/all_calls"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:paddingHorizontal="@dimen/activity_margin"
        android:paddingVertical="0dp"
        android:text="@string/all_g"
        android:includeFontPadding="false"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:cornerRadius="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/missed_calls"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:paddingHorizontal="@dimen/activity_margin"
        android:paddingVertical="0dp"
        android:text="@string/missed"
        android:includeFontPadding="false"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:cornerRadius="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/incoming_calls"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:paddingHorizontal="@dimen/activity_margin"
        android:paddingVertical="0dp"
        android:text="@string/incoming"
        android:includeFontPadding="false"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:cornerRadius="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/outgoing_calls"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:paddingHorizontal="@dimen/activity_margin"
        android:paddingVertical="0dp"
        android:text="@string/outgoing"
        android:includeFontPadding="false"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:cornerRadius="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/rejected_calls"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:paddingHorizontal="@dimen/activity_margin"
        android:paddingVertical="0dp"
        android:text="@string/rejected"
        android:includeFontPadding="false"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:cornerRadius="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
